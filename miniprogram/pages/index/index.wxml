<!-- miniprogram/pages/index/index.wxml -->
<van-notice-bar scrollable="{{ false }}" text="记得右上角添加收藏哟, 每天都能领券" color="#fff" background="#0bb9b6"></van-notice-bar>
<van-notice-bar left-icon="volume-o" text="{{notice}}" />
<view wx:if="{{tabs.length >0}}">
    <van-tabs bind:change="onChange" active="{{ activeTab }}" swipeable>
        <van-tab wx:for="{{tabs}}" wx:for-index="idx" wx:key="idx" title="{{item.title}}">
            <view class="container">
                <view class="coupon">

                    <view class="item" wx:for-index="i" wx:for="{{item.coupon}}" wx:for-item="v" wx:key="i">
                        <view class="adcontent" wx:if="{{idx===0&&i===1}}">
                            <ad unit-id="adunit-f30a61b7661a529d" ad-type="video" ad-theme="white"></ad>
                        </view>
                        <view class="adcontent" wx:elif="{{idx!==0&&i===1}}">
                            <ad  unit-id="adunit-b75f1aa7246b9d0c"></ad>
                        </view>
                        <view class="top">
                            <view class="left">
                                <view class="content">
                                    <image src="{{v.icon}}" class="icon" mode="widthFix" />
                                    <view class="name">{{ v.name }}</view>
                                </view>
                                <view class="text" wx:if="{{v.type == 1}}">天天可领</view>
                                <view class="text" wx:elif="{{v.type == 2}}">限时秒杀</view>
                            </view>
                            <view class="right" data-type="{{v.type}}" data-index="{{i}}" bindtap="toCoupon">免费领取</view>
                        </view>
                        <view class="bottom">
                            <image src="{{v.bannerPic}}" mode="widthFix" data-type="{{v.type}}" data-index="{{i}}"
                                bindtap="toCoupon" />
                        </view>

                    </view>

                </view>
            </view>
        </van-tab>
    </van-tabs>
</view>

<view wx:else class="loading">
    <van-loading size="30px">加载最好的优惠券...</van-loading>
</view>
<van-toast id="van-toast" />