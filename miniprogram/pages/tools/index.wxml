<view wx:if="{{tabs.length >0}}">
    <van-tabs bind:change="onChange" active="{{ activeTab }}" swipeable>
        <van-tab wx:for="{{tabs}}" wx:for-index="idx" wx:key="idx" title="{{item.title}}">
            <view class="container">
                <view class="coupon">
                    <view class="item" wx:for-index="i" wx:for="{{item.coupon}}" wx:for-item="v" wx:key="i">
                        <view class="top">
                            <view class="left">
                                <view class="content">
                                    <image src="{{v.icon}}" class="icon" mode="widthFix" />
                                    <view class="name">{{ v.name }}</view>
                                </view>
                                <view class="text" wx:if="{{v.type == 1}}">免费使用</view>
                                <view class="text" wx:elif="{{v.type == 2}}">限时秒杀</view>
                                <view class="text" wx:elif="{{v.type == 3}}">免费使用</view>
                            </view>
                            <view class="right" data-index="{{i}}" bindtap="jump">点击使用</view>
                        </view>
                        <view class="bottom">
                            <image src="{{v.bannerPic}}" mode="widthFix" data-index="{{i}}" bindtap="jump" />
                        </view>
                    </view>
                </view>
            </view>
        </van-tab>
    </van-tabs>
</view>
<van-toast id="van-toast" />