/* pages/read/index.wxss */
.buy{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 40rpx 0;
}
.buy_top{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;

}
.buy_title{
  font-size: 24rpx;
  margin: 30rpx 0;
}
.buy_text{
  margin-top: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.text_info{
  width: 80%;
  font-size: 28rpx;
  border: 2rpx solid #ccc;
  padding: 20rpx;
  margin-bottom: 60rpx;
}
.content_wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.content_loading {
  width: 120px;
  height: 120px;
}